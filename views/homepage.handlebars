<ol class="post-list">
    {{#each posts as |post|}}
    <li>
        <article class="post">
            <div class="title">
                <a href="{{post.post-url}}" target="_blank">{{post.title}}</a>
                <span>{{post.post-url}}</span>
            </div>
            <div class="meta">
                {{post.vote_count}} points(s) by {{post.user.username}} on {{post.created_at}}
                |
                <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
            </div>
        </article>
    </li>
    {{/each}}
</ol>